<script type="text/javascript">

    $('#btnfacebook').click(function () {

        location.href = "/Home/fbCalendar";
    });
    $('#btngoogle').click(function () {

        location.href = "/Home/ggCalendar";
    });
    $('#submitFormName').click(function () {
        $('#RegisterForm').submit();
    });
    $.fn.fileName = function () {
        var $this = $(this),
        $val = $this.val(),
        valArray = $val.split('\\'),
        newVal = valArray[valArray.length - 1];
        if (newVal !== '') {
            $("#txtFileName").val(newVal);
        }
    };
    $(function () {
        $('input[type=file]').bind('change focus click', function () { $(this).fileName() });
        $('#infochkyes').checkBox({ addVisualElement: false });
        $('#infochkno').checkBox({ addVisualElement: false });
        $('#infochkemail').checkBox({ addVisualElement: false });
        $('#infochkcall').checkBox({ addVisualElement: false });
        $('#infochktext').checkBox({ addVisualElement: false });
        createtopscroll(0, $('.footer').position().top - $('.header').height());

    });
</script>
