@model Kuyam.WebUI.Models.RegisterName
@{
    ViewBag.Title = "RegisterName";
    Layout = "~/Views/Shared/_KuyamLayoutRegister.cshtml";    
}
<script type="text/javascript">
    $(function () {
        $('#infochkyes').checkBox({
            addVisualElement: false,
            'change': function (e, ui) {
                if (ui.checked == true) {
                    $("#checkyes").show();
                }
                else {
                    $("#checkyes").hide();
                }
            }
        });
        $("#txtother1").val("_Other");
        $('#infochkno').checkBox({ addVisualElement: false });
        $('#infochkemail').checkBox({ addVisualElement: false });
        $('#infochkcall').checkBox({ addVisualElement: false });
        $('#infochktext').checkBox({
            addVisualElement: false,
            'change': function (e, ui) {
                if (ui.checked == true) {
                    $("#txtother1").val("");
                    $(".txtother").show();
                    $("#diverror").show();
                    $("#lbinfochktext").text("other :");
                }
                else {
                    $(".txtother").hide();
                    $("#diverror").hide();
                    $("#lbinfochktext").text("other");
                    $("#txtother1").val("_Other");
                }
            }
        });
        createtopscroll(0, $('.footer').position().top - $('.header').height());
    });
</script>
