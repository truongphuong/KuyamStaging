            err=err+'email is required.</br>';

        } else {
            if (email.length > 50) {
                err=err+'email must be less than 50 characters.</br>';
            }
            var reemail = /^([_a-zA-Z0-9-]+)(\.[_a-zA-Z0-9-]+)*@@([a-zA-Z0-9-]+\.)+([a-zA-Z]{2,3})$/;
            if (!reemail.test(email)) {
                err=err+'invalid e-mail address.</br>';

            }
        }
