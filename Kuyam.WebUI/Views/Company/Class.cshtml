            employeeDefault=true;
        }

        //employee name
        if (employeeName == '') {
            err=err+'employee name is required.</br>';

        } else {
            if (employeeName.length > 50) {
                err=err+'employee name must be less than 50 characters.</br>';
            }
        }

        //phone number
