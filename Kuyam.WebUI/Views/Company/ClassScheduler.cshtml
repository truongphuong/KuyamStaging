        var agentID = deviceAgent.match(/(iphone|ipod|android|ipad)/);
        if (agentID) {

            $('#fromEditHours, #toEditHours').scroller({
                preset: 'time',
                theme: 'jqm',
                display: 'modal',
                mode: 'scroller'
            });

            $('#fromhours').scroller({
