@model Kuyam.WebUI.Models.Home.IndexModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "lets you book all your appointments in one place";
}

<!-- Delete everything in this .container and get started on your own site! -->
<div class="bannerSlideShow">
    <div class="slide_feature">
        <ul id="slide_feature" class="rslides">
            <li style="background-image:url(content/images/8.jpg);"></li>
            <li style="background-image:url(content/images/9.jpg);"></li>
            <li style="background-image:url(content/images/7.jpg);"></li>
        </ul>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#slide_feature").responsiveSlides({
                pager: true,
                speed: 800
            });
        });
    </script>

    <div class="lineBottom">
        <div class="container">
            <div class="sixteen columns descriptionTitle">
                <h2><span>booking</span> appointments has never been easier!</h2>
                <h4>you pick the time, we'll book the appointment</h4>
                <p>
                    <a href="#" title="sign up">sign up</a>
                    <a href="#" title="how it works" class="itWork">how it works</a>
                </p>
            </div>
        </div>
    </div>
</div>
<div class="clear"></div>
<div class="container">
    <div class="sixteen columns topContent">
        <h2>welcome to kuyam.</h2>
        <p>book appointments at home or on the go!</p>
    </div>
    <div class="desktop">
        <div class="two-thirds column omega group_image">
            <img alt="Laptop" src="content/images/laptop.png" class="laptop">
            <img alt="Tablet" src="content/images/tablet.png" class="tablet">
            <img alt="Mobile" src="content/images/mobile.png" class="mobile">
        </div>
        <div class="six six-fix columns alpha omega offset-by-one-fix">
            <div class="iphone-android">
                <div class="book-phone">
                    <p class="book">BOOK IN SECONDS WITH KUYAM app. download for</p>
                    <p class="phone">Iphone and android!</p>
                </div>
                <p class="linkStore">
                    <a href="https://itunes.apple.com/us/app/kuyam/id606531094?mt=8" target="_blank" title="App Store"><img alt="App Store" src="content/images/itunes_badge1.png"></a>
                    <a href="https://play.google.com/store/apps/details?id=com.kourosh.kuyam" target="_blank" title="Google Play"><img alt="Google Play" src="content/images/google_badge1.png"></a>
                </p>
            </div>
        </div>
    </div>
    <div class="slide_welcome clearfix iphone">
        <ul id="slide_welcome" class="rslides">
            <li style="background-image:url(content/images/welcome.jpg);">
            </li>
            <li class="iphone-android">
                <div class="book-phone">
                    <p class="book">BOOK IN SECONDS WITH KUYAM app. download for</p>
                    <p class="phone">Iphone and android!</p>
                </div>
                <p class="linkStore">
                    <a href="#" title="App Store"><img alt="App Store" src="content/images/itunes_badge1.png"></a>
                    <a href="#" title="Google Play"><img alt="Google Play" src="content/images/google_badge1.png"></a>
                </p>
            </li>
        </ul>
    </div>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#slide_welcome").responsiveSlides({
                pager: true,
                speed: 800
            });
        });
    </script>
    <div id="companyInfoBar">
        @Html.Partial("_Companies")
    </div>
</div>
<div class="rgba-background">
    <div class="opacity"></div>
    <div class="container items_container">
        <div class="item_container">
            <div class="eleven columns">
                <div class="blockLeft">
                    <span class="boxBlue"></span>
                    <span class="boxlightBlue"></span>
                </div>
                <div class="blockRight">
                    <h3>everyone's here!</h3>
                    <p>discover and schedule appointments with lifestyle businesses around LA in seconds!</p>
                </div>
            </div>
            <div class="one-third column alpha omega">
                <a href="#" title="discover"><img alt="Reuters" src="content/images/btn_discover.png"></a>
            </div>
        </div>
        <div class="item_container">
            <div class="eleven columns">
                <div class="blockLeft">
                    <span class="boxBlue"></span>
                    <span class="boxlightBlue"></span>
                </div>
                <div class="blockRight">
                    <h3>events for you!</h3>
                    <p>book your favorite beauty or fitness appointments with discounts of up to 40% off.</p>
                </div>
            </div>
            <div class="one-third column alpha omega">
                <a href="#" title="discover"><img alt="Reuters" src="content/images/btn_events.png"></a>
            </div>
        </div>
        <div class="item_container">
            <div class="eleven columns">
                <div class="blockLeft">
                    <span class="boxBlue"></span>
                    <span class="boxlightBlue"></span>
                </div>
                <div class="blockRight">
                    <h3>you'll love our blog!</h3>
                    <p>it covers the latest tips and trends on topics ranging from beauty, fitness, lifestyle and more.</p>
                </div>
            </div>
            <div class="one-third column alpha omega">
                <a href="#" title="discover"><img alt="Reuters" src="content/images/btn_blog.png"></a>
            </div>
        </div>
    </div>
</div>
<div class="clear"></div>
<div class="midContent desktop">
    <ul class="ad_logo">
        <li><a href="#" title="Reuters"><img alt="Reuters" src="content/images/reuters.png"></a></li>
        <li><a href="#" title="The Wall Street"><img alt="The Wall Street" src="content/images/thewallstreet.png"></a></li>
        <li><a href="#" title="Start Up"><img alt="Start Up" src="content/images/startup.png"></a></li>
        <li><a href="#" title="Tech"><img alt="Tech" src="content/images/tech.png"></a></li>
        <li><a href="#" title="Tech Crunch"><img alt="Tech Crunch" src="content/images/techcrunch.png"></a></li>
        <li><a href="#" title="Reuters"><img alt="Reuters" src="content/images/reuters.png"></a></li>
    </ul>
</div>
<div class="clear"></div>
<div class="bottomContent">
    <div class="container">
        <div class="one-third column">
            <h3><a href="#" title="Kuyam"><img alt="Logo Kuyam" src="content/images/logo_kuyam.png" width="159" height="42"></a></h3>
            <p class="feedback">we love hearing your questions and feedback. send us an email or give us a call!</p>
            <p><span class="address">1901 Avenue of the Stars, Suite 1900 Los Angeles, CA 90067</span></p>
            <p><span class="phone">(310) 461-15151</span></p>
            <p><a href="mailto:info@kuyam.com" title="info@kuyam.com" class="mailto">info@kuyam.com</a></p>
        </div>
        <div class="one-third column desktop">
            <h3>Kuyam app</h3>
            <p>download kuyam's FREE app for your devices. with our app book your appointments on the go! available for iPhone & Android phones.</p>
            <p>
                <a href="https://itunes.apple.com/us/app/kuyam/id606531094?mt=8" target="_blank" title="App Store"><img alt="App Store" src="content/images/itunes_badge.png" width="109" height="34"></a>
                <a href="https://play.google.com/store/apps/details?id=com.kourosh.kuyam" target="_blank" title="Google Play"><img alt="Google Play" src="content/images/google_badge.png" width="109" height="33"></a>
            </p>
            <p class="liveChat"><a class="btnLiveChat off" href="JavaScript:void(0);" title="live chat"></a></p>
        </div>
        <div class="one-third column">
            <h3>sign up</h3>
            <div class="form">
                <form action="#" method="get">
                    <label>name:</label>
                    <input type="text" name="name" placeholder="Enter Name">
                    <label>email:</label>
                    <input type="text" name="email" placeholder="Enter Email">
                    <input type="submit" value="Sign up">
                </form>
            </div>
        </div>
        <div class="six columns alpha omega rightFooter iphone">
            <p>
                <a href="#" title="Facebook"><img alt="Facebook" src="content/images/icons/icon_facebook.png"></a>
                <a href="#" title="Twitter"><img alt="Twitter" src="content/images/icons/icon_twitter.png"></a>
                <a href="#" title="Google Plus"><img alt="Google Plus" src="content/images/icons/icon_google.png"></a>
                <a href="#" title="Pinterest"><img alt="Pinterest" src="content/images/icons/icon_pinterest.png"></a>
                <a href="#" title="Youtube"><img alt="Youtube" src="content/images/icons/icon_youtube.png"></a>
            </p>
        </div>
    </div>
</div><!-- bottomContent -->
