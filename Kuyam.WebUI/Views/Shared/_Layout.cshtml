@using M2.Util
@using M2.Util.MVC
@using Kuyam.WebUI.Models
<!DOCTYPE html>
<html xmlns:fb="https://www.facebook.com/2008/fbml" xmlns:addthis="https://www.facebook.com/2008/fbml" xmlns:g="https://www.facebook.com/2008/fbml">
<head>
    <title>kuyam @(ViewBag.Title != "" ? "- " + ViewBag.Title.ToLower() : "")</title>
    <link href="@Url.Content("~/Content/themes/custom-theme/jquery-ui-1.8.16.custom.css")" rel="Stylesheet" type="text/css"/>
    <link rel="shortcut icon" href="@Url.Content("~/favicon.ico")"/>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.10.2/jquery-ui.min.js" type="text/javascript"></script>

    <script type="text/javascript" src="@Url.Content("~/scripts/jquery.alerts/jquery.alerts.js")"></script>
    <link href="@Url.Content("~/scripts/jquery.alerts/jquery.alerts.css")" rel="stylesheet" type="text/css" />

    <link href="@Url.Content("~/scripts/jqueryTimepickerAddon/jqueryTimepickerAddon.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="@Url.Content("~/scripts/jqueryTimepickerAddon/jqueryTimepickerAddon.js")"></script>

    @if (!Request.IsAuthenticated && !MySession.DebugMode)
    { 
        <script type="text/javascript" src="https://s7.addthis.com/js/250/addthis_widget.js#pubid=ra-4e7601423db4b833"></script>
    }

    <script type="text/javascript" src="@Url.Content("~/scripts/modernizr.custom.js")"></script>
    <script src="@Url.Content("~/scripts/M2.Modernizr.js")" type="text/javascript"></script>

    <link href="@Url.Content("~/scripts/fbdropdown/fbdropdown.css")" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="@Url.Content("~/scripts/fbdropdown/fbdropdown.js")"></script>

    <script type="text/javascript" src="@Url.Content("~/scripts/main.js")"></script>

    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    @RenderSection("Head", required: false)
    <script type="text/javascript">
        var $j = jQuery;
    </script>
</head>
<body>
    <div id="mainheader">
        <div class="headerframe">
            <div style="float: left; width: 200px; padding-top: 10px;">
                <a href="@Url.Content("~/")">
                    <img src="@Url.Content("~/images/mainlogo-beta.png")" style="vertical-align:bottom" =73/></a>
            </div>
            <div style="float: right; margin-top: 0px; text-align: right; width: 600px">
                @Html.Partial("_LoginPartial")
                <br />
                <br />
                @if (User.IsInRole("personal"))
                {
                    using (@Html.BeginForm("calendar-search", "cust", FormMethod.Post, new { name = "topsearch", autocomplete = "off" }))
                    {
                       <br />
                        using (Html.BeginForm("submit", "search", FormMethod.Post, new { name = "search", autocomplete = "off" }))
                        {
                            <div class="search">
                                <div class="searchOuter rounded">
                                    <input type="text" name="SearchTerms" id="SearchTerms" class="searchbox" placeholder="search calendar" />
                                    <a href="javascript:document.topsearch.submit();" class="searchButton">&nbsp;&nbsp;&nbsp;&nbsp;</a>
                                </div>
                            </div>
                        }
                    }
                }
            </div>
        </div>
    </div>
    <div id="mainheaderbottom"></div>
    <div id="maincontent">
        @if (Request.IsAuthenticated)
        { 
        <div class="feedback-link">
            @*Html.ImageLink("contact", "home", @Url.Content("~/images/feedback-button.jpg"), "feedback")*@
            <a target="_blank" href="mailto:feedback@kuyam.com?subject=kuyam feedback from @(Kuyam.WebUI.Models.MySession.Username)"><img src="@Url.Content("~/images/feedback-button.jpg")" /></a>
        </div>
        }
        <div class="contentframe">
            <div class="contentframeinner">
                @*
                @if (Kuyam.WebUI.Models.MySession.Messages.Count != null)
                {
                    foreach (string msg in Kuyam.WebUI.Models.MySession.Messages)
                    { 
                        @:<div class="message">@msg</div>
                    }
                    Kuyam.WebUI.Models.MySession.Messages.Clear();
                }
                *@
                @RenderBody()
            </div>
        </div>
    </div>
    <div id="mainfooter">
        <div class="footerframe">
        @if (MySession.DebugMode)
        { 
            <div class="debug-info rounded">@ViewBag.DebugInfo@MySession.Dump()@MyApp.Dump()@MyApp.Platform.DumpSys()</div>
        }

            <div class="footer-links-left">
                <div class="footer-links-caption">
                    company</div>
                @Html.ActionLink("about", "about", "home")<br />
                @Html.ActionLink("management team", "team", "home")<br />
                @Html.ActionLink("learn more", "learn-more", "home")<br />
                <a href="javascript:showDialog('@Url.Content("~/home/terms")', 'terms & conditions')" class="dialoglink">terms & conditions</a><br />
                <a href="javascript:showDialog('@Url.Content("~/home/privacy-security")', 'privacy & security')" class="dialoglink">privacy & security</a>
            </div>
            <div class="footer-links-middle">
                <div class="footer-links-caption">
                    support</div>
                @Html.ActionLink("faq", "faq", "home")<br />
                @Html.ActionLink("contact", "contact", "home")<br />
            </div>
            @*<div class="footer-links-middle">
                <div class="footer-links-caption">
                    developers</div>
                @Html.ActionLink("api", "api", "home")<br />
            </div>*@
            <div class="footer-links-right">
                <div class="footer-links-caption">
                    featured locations</div>
                los angeles, ca
            </div>
            <div style="float: right; text-align: right;">
                <div class="footer-copyright">
                Copyright &copy;2011-@DateTime.Now.Year Kuyam Companies, Inc. All Rights Reserved.<br />patent pending.</div>
                @if (!Request.IsAuthenticated && !MySession.DebugMode)
                { 
                    @* AddThis Button BEGIN *@
                    <div class="addthis_toolbox addthis_default_style" addthis:url="http://kuyam.com">
                    <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
                    <a class="addthis_button_tweet"></a>
                    <a class="addthis_button_google_plusone" g:plusone:size="medium"></a>
                    <a class="addthis_button_compact"></a>
                    </div>
                    @* AddThis Button END *@
                }
            </div>
                <!--
                <div>
                    <br />
                    <script src="http://platform.twitter.com/widgets.js" type="text/javascript"></script>
                    <a href="https://twitter.com/mykuyam" class="twitter-follow-button">Follow us on Twitter</a>
                    <script src="http://connect.facebook.net/en_US/all.js#xfbml=1" type="text/javascript"></script>
                    <fb:like></fb:like>
                </div>
                -->
        </div>
    </div>
    @RenderSection("Foot", required: false)
    <div id="dialog">
    </div>

    @if (!MySession.DebugMode)
    { 
        <script type="text/javascript">
            // @* Google Analytics - Start *@
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-27075223-1']);
            _gaq.push(['_setDomainName', 'kuyam.com']);
            _gaq.push(['_trackPageview']);

            (function () {
                var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();
            // @* Google Analytics - End *@
        </script>
    }

    <script type="text/javascript">
        @foreach(string m in Kuyam.WebUI.Models.MySession.Messages)
        {
            @:alert("@Html.Raw(m.ToLower())") 
        }
        @{Kuyam.WebUI.Models.MySession.Messages = null;}
    </script>
</body>
<script type="text/javascript">

    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-35978406-1']);
    _gaq.push(['_trackPageview']);

    (function () {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

</script>
</html>
