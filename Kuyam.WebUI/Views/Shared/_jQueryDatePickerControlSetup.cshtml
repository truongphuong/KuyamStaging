<script type="text/javascript">
    jQuery(function () {
        $(function () {
            if (!Modernizr.appleios) {
                $("input[type='date']").datepicker({ dateFormat: "m/d/yy" });
                $("input[type='time']").timepicker({ ampm: true, timeFormat: 'h:mm tt', hourGrid: 4, minuteGrid: 15, stepMinute: 5 });
                $("input[type='datetime']").datetimepicker({ ampm: true, timeFormat: 'h:mm tt', hourGrid: 4, minuteGrid: 10 });
                $("input[type='apptdate']").datepicker({ minDate: new Date(), dateFormat: "m/d/yy" });
                //$("input[type='apptdatetime']").datetimepicker({ minDate: new Date(), dateFormat: "m/d/yy h:MM", ampm: true, timeFormat: 'h:mm tt', hourGrid: 4, minuteGrid: 10 });
                $("input[type='birthdate']").datepicker({ dateFormat: "m/d/yy", yearRange: '-100:-10', changeYear: true, defaultDate: "1/1/1981" });
            }
        });
    })
</script>
