@using Kuyam.Database
@model dynamic
@{
    string host = Kuyam.WebUI.Helpers.EmailHelper.GetStoreHost();    
}
<style>
    .kuyam *{
        line-height: 0;
    }
    .kuyam .content td *{
        line-height: 142%;
    }
</style>
<center>
    <table class="kuyam" cellpadding="0" cellspacing="0" border="0" width="550px" style="font-family: Arial, Helvetica, sans-serif;">
        <tr>
            <td>
                <table cellpadding="0" cellspacing="0" border="0">
                    <tr style="background-color: black; height: 61px;">
                        <td style="text-align: left;" >
                            <img alt="" src="@host/images/header_logo.png" usemap="#logo" style="border: solid 0px white;" />
                            <map name="logo" id="logo">
                                <area shape="rect" coords="20,5,148,50" href="http://www.kuyam.com" alt="Kuyam" title="Kuyam" />
                            </map>
                        </td>
                        <td style="color: #c1d82f; text-align: right; font-size: 12px;" >
                            <div style="font-family: Arial, Helvetica, sans-serif; padding: 25px 17px 0px 0px;">
                                @Model.DateNow
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" style="line-height: 0px; font-size: 0px;">
                            <img alt="" src="@host/images/header_footer_incomingmodify.png" />
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td style="line-height: 0px; font-size: 0px;">
                <img alt="" src="@host/images/tbox_incomingmodify.png" />
