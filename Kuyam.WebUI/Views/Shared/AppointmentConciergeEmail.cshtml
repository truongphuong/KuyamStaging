                    <area shape="rect" coords="438,4,472,35" href="https://plus.google.com/u/0/b/103779915573360185741/103779915573360185741" alt="Google+" title="Google+" />
                    <area shape="rect" coords="474,4,505,35" href="http://instagram.com/kuyamsocial" alt="Instagram" title="Instagram" />
                </map>
