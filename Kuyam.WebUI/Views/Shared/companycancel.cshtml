                <table cellpadding="0" cellspacing="0" border="0">
                    <tr>
                        <td style="line-height: 0px; font-size: 0px;">
                            <img alt="" src="@host/images/footer2.png" style="border: solid 0px white;" />
                        </td>
                        <td style="line-height: 0px; font-size: 0px;">
                            <a href="mailto:@Model.Email" title="@Model.Email">
                                <img alt="" src="@host/images/footer2a.png" style="border: solid 0px white;" /></a>
                        </td>
                        <td style="line-height: 0px; font-size: 0px;">
                            <img alt="" src="@host/images/footer2b.png" style="border: solid 0px white;" usemap="#kuyam" />
