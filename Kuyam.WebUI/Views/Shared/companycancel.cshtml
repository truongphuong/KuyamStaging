                                <area shape="rect" coords="20,5,148,50" href="@host" alt="Kuyam" title="Kuyam" />
                            </map>
                        </td>
                         <td style="color: #c1d82f; text-align: right; font-size: 12px;padding-right: 17px;" >
                            <div style="font-family: Arial, Helvetica, sans-serif;padding-top: 25px;">
                                @date
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" style="line-height: 0px; font-size: 0px;">
                            <img alt="" src="@host/images/header_footer.png" />
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td style="line-height: 0px; font-size: 0px;">
