    function getParam() {
        var firstName = $("#firstName").val();
        var lastName = $("#lastName").val();
        var checkin = $("#checkin").val();
        var checkout = $("#checkout").val();
        var roomNumber = $("#roomNumber").val();
        var email = $("#email").val();
        var cellphone = $("#cellphone").val();
        if (cellphone == 'cellphone')
            cellphone = '';
        var params = {
            firstName: firstName,
            lastName: lastName,
            checkin: checkin,
            checkout: checkout,
            roomNumber: roomNumber,
            email: email,
            cellphone: cellphone
        };
        return params;
    }
    function editGuest() {
        ShowIndicator();
        var params = getParam();
        params.guestId = $("#guestId").val();
        $.ajax(
           {
               type: 'POST',
               contentType: 'application/json; charset=utf-8',
               data: JSON.stringify(params),
               dataType: 'html',
               url: '/Concierge/EditGuest/'
           })
           .success(function (result) {
               if (result != 'false') {
                   showAlertMessage("edit successful");
                   $('#listUsers').html(result);
               }
               else {
                   showAlertMessage("edit usuccessful");
               }
               HideIndicator();
           })
           .error(function (error) {
               //showAlertMessage("edit successful");
               HideIndicator();
           });
    }
    function addGuest() {
        ShowIndicator();
        var params = getParam();
        $.ajax(
        {
            type: 'POST',
            contentType: 'application/json; charset=utf-8',
            data: JSON.stringify(params),
            dataType: 'html',
            url: '/Concierge/AddGuest/'
        })
        .success(function (result) {
            if (result != 'false') {
                closeGuestMessage();
                $('#listUsers').html(result);
                $("#firstName").val("first name *");
                $("#lastName").val("last name *");
                $("#checkin").val("check-in *");
                $("#checkout").val("check-out *");
                $("#roomNumber").val("room number *");
                $("#email").val("email *");
                $("#cellphone").val("cellphone");
            } else {
                closeGuestMessage();
                showAlertMessage("add unsuccessful");
            }
            HideIndicator();
        })
        .error(function (error) {
            HideIndicator();
            //showAlertMessage("edit successful");
        });
    }
    function checkinputdata(firstName, lastName, checkin, checkout, roomNumber, email, cellphone) {
        if (firstName == ''
            || lastName == ''
            || checkin == ''
            || checkout == ''
            || roomNumber == ''
            || email == ''
        || firstName == 'firstName *'
            || lastName == 'lastName *'
            || checkin == 'check-in *'
            || checkout == 'check-out *'
            || roomNumber == 'roomNumber *'
            || email == 'email *') {
            return false;
        }
        return true;
    }
    function validateEmail(email) {
        var re = /^[\w-]+(\.[\w-]+)*@@([a-z0-9-]+(\.[a-z0-9-]+)*?\.[a-z]{2,6}|(\d{1,3}\.){3}\d{1,3})(:\d{4})?$/;
        return re.test(email);
    }
    function compareDate(str1, str2) {
        var date1 = Date.parse(str1);
        var date2 = Date.parse(str2);
        if (date1 > date2) {
            return false;
        }
        else {
            return true;
        }
        return true;
    }
